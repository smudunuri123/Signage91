<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="isArrowPoistion">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <attr name="isBorderType">
        <enum name="stroke" value="0" />
        <enum name="fill" value="1" />
    </attr>
    <attr name="isStrokeCap">
        <enum name="butt" value="0" />
        <enum name="round" value="1" />
        <enum name="square" value="2" />
    </attr>
    <attr name="isStrokeJoin">
        <enum name="bevel" value="0" />
        <enum name="miter" value="1" />
        <enum name="round" value="2" />
    </attr>
    <declare-styleable name="ShaderImageView">
        <attr name="isSquare" format="boolean" />
        <attr name="isBorderColor" format="color" />
        <attr name="isBorderWidth" format="dimension" />
        <attr name="isBorderAlpha" format="float" />
        <attr name="isForeground" format="integer|reference" />
        <!-- Rounded Image View -->
        <attr name="isRadius" format="dimension" />
        <!--BubbleImageView-->
        <attr name="isArrowPoistion"/>
        <attr name="isTriangleHeight" format="dimension"/>
        <!--PorterImageView-->
        <attr name="isShape" format="integer|reference" />
        <!--ShaderImageView-->
        <attr name="isBorderType"/>
        <attr name="isStrokeCap"/>
        <attr name="isStrokeJoin"/>
        <attr name="isStrokeMiter" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PieChart">
        <attr name="marqueeEnabled" format="boolean" />
        <attr name="edgeEffectEnabled" format="boolean" />
        <attr name="edgeEffectWidth" format="integer" />
        <attr name="edgeEffectColor" format="color" />
        <attr name="pauseDuration" format="integer" />
        <attr name="forceMarquee" format="boolean" />
        <attr name="centerText" format="boolean" />
    </declare-styleable>

</resources>